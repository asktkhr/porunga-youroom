
<LinearLayout android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_height="wrap_content">
	<ImageView android:id="@+id/member_image" android:layout_gravity="top"
		android:minHeight="48px" android:minWidth="48px" android:layout_height="48px" android:layout_width="48px" android:src="@drawable/default_member_image" android:scaleType="centerInside"></ImageView>
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/linearLayout3"
			android:orientation="vertical" android:layout_margin="1pt">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/linearLayout4"
				android:layout_marginLeft="1pt" android:layout_marginRight="1pt">
				<TextView android:id="@+id/name" android:layout_height="wrap_content"
					android:textStyle="bold" android:layout_width="wrap_content"
					android:layout_weight="1" android:textSize="6pt"></TextView>
				<TextView android:id="@+id/created_time"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:paddingRight="5pt" android:textSize="5pt"
					android:textStyle="italic"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="fill_parent"
				android:id="@+id/linearLayout5" android:layout_width="fill_parent"
				android:orientation="vertical" android:layout_margin="1pt">
				<TextView android:id="@+id/content" android:layout_height="wrap_content"
					android:layout_gravity="left" android:gravity="left"
					android:layout_width="fill_parent" android:textSize="6pt"></TextView>
				<LinearLayout android:layout_height="wrap_content"
					android:id="@+id/linearLayout6" android:layout_width="fill_parent"
					android:orientation="horizontal" android:layout_gravity="bottom"
					android:layout_marginTop="10pt">
					<TextView android:id="@+id/attachment_type"
						android:layout_height="wrap_content" android:layout_gravity="left"
						android:layout_width="fill_parent" android:gravity="left"
						android:textSize="5pt" android:layout_weight="1"
						android:textStyle="bold" android:textColor="#009900"></TextView>
					<TextView android:id="@+id/descendants_count"
						android:layout_height="wrap_content" android:textStyle="bold"
						android:layout_gravity="right" android:layout_width="wrap_content"
						android:gravity="right" android:layout_marginRight="10px"
						android:textSize="5pt"></TextView>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/number_of_characters"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="right" android:layout_gravity="right"></TextView>
	<EditText android:text="" android:id="@+id/entry_content"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:lines="6" android:cursorVisible="true" android:gravity="top|left">
	</EditText>
	<Button android:id="@+id/post_button" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:saveEnabled="true"
		android:layout_gravity="right"></Button>
</LinearLayout>
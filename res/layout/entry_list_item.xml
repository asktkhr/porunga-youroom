<LinearLayout android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_height="wrap_content">
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<!-- <TextView android:id="@+id/level" android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:textStyle="bold" android:textSize="7pt"></TextView> -->
		<ImageView android:layout_height="wrap_content" android:id="@+id/level"
			android:layout_width="wrap_content" android:minHeight="16px"
			android:layout_gravity="left"></ImageView>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/linearLayout3"
			android:orientation="vertical" android:layout_margin="1pt">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/linearLayout4">
				<TextView android:id="@+id/name" android:layout_height="wrap_content"
					android:textStyle="bold" android:layout_width="wrap_content"
					android:layout_weight="1" android:textSize="6pt"></TextView>
				<TextView android:id="@+id/update_time"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:paddingRight="5pt" android:textSize="5pt"
					android:textStyle="italic"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/linearLayout5"
				android:orientation="vertical">
				<TextView android:id="@+id/content" android:layout_height="wrap_content"
					android:layout_gravity="left" android:gravity="left"
					android:layout_width="fill_parent" android:textSize="6pt"></TextView>
				<TextView android:id="@+id/attachment_type"
					android:layout_height="wrap_content" android:layout_gravity="left"
					android:layout_width="fill_parent" android:gravity="left"
					android:textSize="5pt" android:textStyle="bold" android:textColor="#009900"
					android:layout_marginTop="10px"></TextView>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
